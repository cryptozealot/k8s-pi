{
    "protocols": {
        "bgp": {
            "{{ metallb.peer_asn }}": {
                "parameters": {
                    "router-id": "{{ metallb.peer_address }}"
                },
                "neighbor": {
{% for host in groups['workers'] %}
                    "{{ host }}": {
                        "remote-as": "{{ metallb.peer_asn }}"
                    }{% if not loop.last %},{% endif %}

{% endfor %}
                }
            }
        }
    }
}
